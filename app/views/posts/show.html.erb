<div class="post-box">
  <div class="row">
    <div class="text-center title">
      <%= @post.title %>
    </div>
    <div class="col-sm-10 col-sm-offset-1">
      <div class="text-justify">
        <%= raw @post.content.truncate(400) + "... " %>
      </div>
    </div>
    <div class="col-sm-10 col-sm-offset-1">
      <div class="bottom-line">
        <p><%= @post.created_at.strftime("Posted on %d/%m/%y at %H:%M")  %> -
        <% unless @post.updated_at == @post.created_at %>
          <%= @post.updated_at.strftime("Updated on %d/%m/%y at %H:%M")  %>
        <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <ul class="list-inline text-center">
        <li class="small-side-padding">
          <%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %>
          </li>
        <li class="small-side-padding">
          <%= button_to "Delete", post_path(@post), method: :delete, class: "btn btn-danger" %>
          </li>
      </ul>
      <ul class="list-inline text-center">
        <li class="small-side-padding">
          <%= link_to "Add a new post", new_post_path, class: "btn btn-success" %>
        </li>
        <li class="small-side-padding">
          <%= link_to "See all posts", posts_path, class: "btn btn-primary" %>
        </li>
      </ul>
    </div>
  </div>
</div>


