<h2 class="text-center">Welcome to my practice blog</h2>
<div id="carousel-posts" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-posts" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-posts" data-slide-to="1"></li>
    <li data-target="#carousel-posts" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <% if @posts.count > 0 %>
      <div class="item active">
            <div class="post-box">
              <div class="row">
                <div class="text-center title">
                  <%= @posts[0].title %>
                </div>
                <div class="col-sm-10 col-sm-offset-1">
                  <div class="text-justify">
                  <p><%= raw @posts[0].content.truncate(400) + "... " %></p>
                  </div>
                  <div class="down-button text-center">
                    <%= link_to "Read more", post_path(@posts[0]), class: "btn btn-primary text"  %>
                  </div>
                </div>
              </div>
            </div>

        <div class="carousel-caption">
        </div>
      </div>
      <% if @posts.count > 1 %>
        <div class="item">
            <div class="post-box">
              <div class="row">
                <div class="text-center title">
                  <%= @posts[1].title %>
                </div>
                <div class="col-sm-10 col-sm-offset-1">
                  <div class="text-justify">
                    <%= raw @posts[1].content.truncate(400) + "... " %>
                  </div>
                  <div class="down-button text-center">
                    <%= link_to "Read more", post_path(@posts[1]), class: "btn btn-primary"  %>
                  </div>
                </div>
              </div>
            </div>
          <div class="carousel-caption">
          </div>
        </div>
        <% if @posts.count > 2 %>
          <div class="item">
            <div class="post-box">
              <div class="row">
                <div class="text-center title">
                  <%= @posts[2].title %>
                </div>
                <div class="col-sm-10 col-sm-offset-1">
                  <div class="text-justify">
                    <%= raw @posts[2].content.truncate(400) + "... " %>
                  </div>
                  <div class="down-button text-center">
                    <%= link_to "Read more", post_path(@posts[0]), class: "btn btn-primary text"  %>
                  </div>
                </div>
              </div>
            </div>
            <div class="carousel-caption">
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-posts" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-posts" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="text-center down-button">
  <%= link_to "See all posts", posts_path, class: "btn btn-primary" %>
  <%= link_to "Add a post", new_post_path, class: "btn btn-primary" %>
</div>
