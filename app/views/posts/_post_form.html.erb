<%= simple_form_for @post do |f| %>
  <div class="form-group">
    <%= f.input :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :content, as: :ckeditor, input_html: {ckeditor: {toolbar: 'Full'}}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
